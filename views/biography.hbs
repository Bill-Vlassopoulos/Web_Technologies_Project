        document.addEventListener('DOMContentLoaded', async function() {
    const imageUrls = [
        "http://www.vggallery.com/painting/f_0015a.jpg",
        "http://www.vggallery.com/painting/f_0048a.jpg",
        "http://www.vggallery.com/painting/f_0365v.jpg",
        "http://www.vggallery.com/painting/f_0565.jpg",
        "http://www.vggallery.com/painting/f_0678.jpg",
        "http://www.vggallery.com/painting/f_0805.jpg"
        
    ];

    async function preloadImages(urls) {
        const promises = urls.map(async url => {
            const img = new Image();
            img.src = url;
            await img.decode();
            return url;
        });

        try {
            await Promise.all(promises);
            //console.log('All images preloaded');
        } catch (error) {
            console.error(error);
        }
    }

    await preloadImages(imageUrls);
});

